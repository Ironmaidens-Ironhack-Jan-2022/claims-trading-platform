<div class="container-fluid mt-5">
    <div class="row">
        <div class="col-2"></div>
        <div class="col">
            <h2 class="mb-4">Claim Details</h2>

            <table class="table table-hover w-75">
                <tbody>
                    {{#each claim}}
                    {{#unless @last}}
                    <tr>   
                        <th>{{startCase @key}}:</th> 
                        {{#if @first}}
                        <td>{{this.firstName}} {{this.lastName}}{{#if this.affiliation}}, {{this.affiliation}}{{/if}}</td>
                        {{else}}
                        <td>{{this}}</td>
                        {{/if}}
                    </tr>
                    {{/unless}}
                    {{/each}}
                </tbody>
            </table>
            {{#if claim.isEditable}}
                        <a href="/claims/{{claimId}}/edit"><button class="btn btn-primary mt-3">Edit</button></a>
                        <a href="/claims/{{claimId}}/delete"><button class="btn btn-primary mt-3 ml-2 mr-5">Delete</button></a>
                        <br>
                        <a href="/user/my-claims"><button class="btn btn-primary mt-3">All My Claims</button></a>
            {{else}}
                <a href="/claims/{{claimId}}/{{claim.seller._id}}/details"><button class="btn btn-primary mt-3">View Seller Details</button></a>
                <br>
                <a href="/claims"><button class="btn btn-primary mt-3">All Claims</button></a>
            {{/if}}
            
        </div>
    </div>
</div>
