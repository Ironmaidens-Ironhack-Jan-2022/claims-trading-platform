<div class="container-fluid">
    <div class="row">
        <div class="col-2"></div>
        <div class="col-10 d-flex flex-row justify-content-center mt-3">
            <div> 
            <h2 class="my-4">Create claim</h2>
            <form class="row" action="/claims/create" method="post">
                        <div class="col-12">
                            <label class="form-label w-50">Debtor
                                <input class="form-control" type="text" name="debtor" required>
                            </label>
                        </div>
                        <div class="col-12">
                            <label class="form-label w-50">Debtor country
                                <input class="form-control" type="text" name="debtorLocation" required>
                            </label>
                        </div>
                        <div class="col-12 d-flex flex-row">
                            <div>
                                <label class="form-label">Currency
                                    <select class="form-select" name="currency">
                                        <option value="EUR">EUR</option>
                                        <option value="USD">USD</option>
                                        <option value="GBP">GBP</option>
                                    </select>
                                </label>
                            </div>
                            <div class="mx-2">
                                <label class="form-label">Face Value
                                    <input class="form-control w-100" type="number" min="0" name="faceValue" required>
                                </label>
                            </div>
                        </div>
                        <div class="col-12">
                            <label class="form-label w-50">Claim Type
                                <select class="form-select w-100" name="claimType">
                                    <option value="Corporate">Corporate</option>
                                    <option value="Consumer">Consumer</option>
                                    <option value="Retail Mortgage">Retail Mortgage</option>
                                    <option value="Commercial Real Estate">Commercial Real Estate</option>
                                    <option value="Trade">Trade</option>
                                </select>
                            </label>
                        </div>
                        <div class="col-12">
                            <label class="form-label">Minimum Price (% Face Value)
                                <input class="form-control w-100" type="number" min="0" max="100" name="minimumPrice" required>
                            </label>
                        </div>
                        <div class="col-12">
                            <label class="form-label w-50"> Performance
                                <select class="form-select" name="performance">
                                    <option value="Performing">Performing</option>
                                    <option value="Defaulted">Defaulted</option>
                                    <option value="Stressed">Stressed</option>
                                </select>
                            </label>
                        </div>
                        <div class="col-12">
                            <label class="form-label">Due Date
                                <input class="form-control w-100" type="date" name="maturity">
                            </label>
                        </div>
                        <div class="col-12">
                            <button type="submit" class="btn btn-primary my-3">Publish claim</button>
                        </div>
                    </form>
            </div>
        </div>
    </div>  
</div>