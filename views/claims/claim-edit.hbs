<div class="container-fluid">
    <div class="row">
        <div class="col-2"></div>
        <div class="col-10 d-flex flex-row justify-content-center mt-3">
            <div> 
            <h2 class="my-4">Edit claim</h2>
            <form class="row" action="/claims/{{claim._id}}/edit" method="post">
                        <div class="col-12">
                            <label class="form-label w-50">Debtor
                                <input class="form-control" type="text" name="debtor" value="{{claim.debtor}}" required>
                            </label>
                        </div>
                        <div class="col-12">
                            <label class="form-label w-50">Debtor Location
                                <input class="form-control" type="text" name="debtorLocation"  value="{{claim.debtorLocation}}"required>
                            </label>
                        </div>
                        <div class="col-12 d-flex flex-row">
                            <div>
                                <label class="form-label">Currency
                                    <select class="form-select" name="currency">
                                        <option value="EUR" {{#if claim.EUR}} {{claim.EUR}} {{/if}}>EUR</option>
                                        <option value="USD" {{#if claim.USD}} {{claim.USD}} {{/if}}>USD</option>
                                        <option value="GBP" {{#if claim.GBP}} {{claim.GBP}} {{/if}}>GBP</option>
                                    </select>
                                </label>
                            </div>
                            <div class="mx-2">
                                <label class="form-label">Face Value
                                    <input class="form-control w-100" type="number" min="0" name="faceValue" value={{claim.faceValue}} required>
                                </label>
                            </div>
                        </div>
                        <div class="col-12">
                            <label class="form-label w-50">Claim Type
                                <select class="form-select w-100" name="claimType">
                                    <option value="Corporate"{{#if claim.Corporate}} {{claim.Corporate}} {{/if}} >Corporate</option>
                                    <option value="Consumer" {{#if claim.Consumer}} {{claim.Consumer}} {{/if}}>Consumer</option>
                                    <option value="Retail Mortgage"{{#if claim.[Retail Mortgage]}} {{claim.[Retail Mortgage]}} {{/if}}>Retail Mortgage</option>
                                    <option value="Commercial Real Estate" {{#if claim.[Commercial Real Estate]}} {{claim.[Commercial Real Estate]}} {{/if}}>Commercial Real Estate</option>
                                    <option value="Trade" {{#if claim.Trade}} {{claim.Trade}} {{/if}}>Trade</option>
                                </select>
                            </label>
                        </div>
                        <div class="col-12">
                            <label class="form-label">Minimum Price (% Face Value)
                                <input class="form-control w-100" type="number" min="0" max="100" name="minimumPrice" value={{claim.minimumPrice}} required>
                            </label>
                        </div>
                        <div class="col-12">
                            <label class="form-label w-50"> Performance
                                <select class="form-select" name="performance">
                                    <option value="performing" {{#if claim.performing}} {{claim.performing}} {{/if}}>Performing</option>
                                    <option value="defaulted" {{#if claim.defaulted}} {{claim.defaulted}} {{/if}}>Defaulted</option>
                                    <option value="stressed" {{#if claim.stressed}} {{claim.stressed}} {{/if}}>Stressed</option>
                                </select>
                            </label>
                        </div>
                        <div class="col-12">
                            <label class="form-label">Due Date
                                <input class="form-control w-100" type="date" name="maturity" value={{claim.maturity}}>
                            </label>
                        </div>
                        <div class="col-12">
                            <button type="submit" class="btn btn-primary my-3">Update</button>
                        </div>
                    </form>
            </div>
        </div>
    </div>  
</div>



