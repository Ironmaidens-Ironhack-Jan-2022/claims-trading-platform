<div class="container">
    <div class="row d-flex flex-row justify-content-center">
        <h1>Signup</h1>
    </div>
    <div class="row d-flex flex-row justify-content-center">
        <form class="row-g-3" action="/auth/signup" method="post">
            <div class="form-check form-check-inline">
                <label class="form-check-label">Buy
                <input class="form-check-input" type="radio" name="role" value="Buyer" {{#if buyer}} {{buyer}} {{/if}}>
                </label>
                </div>
                <div class="form-check form-check-inline">
                <label class="form-check-label">Sell
                    <input class="form-check-input" type="radio" name="role" value="Seller" {{#if seller}} {{seller}} {{/if}}>
                </label>
            </div>   
            <div class="col-12">
                <label class="form-label">First name
                <input type="email" class="form-control" type="text" name="firstName" required>
                </label>
            </div>
            <div class="col-12">
                <label class="form-label">Last name
                <input class="form-control" type="text" name="lastName" required>
                </label>
            </div>
            <div class="col-12">
                <label class="form-label">Affiliation
                    <input class="form-control" type="text" name="affiliation" required>
                </label>
            </div>
            <div class="col-12">
                <label class="form-label">Email
                    <input class="form-control" type="email" name="email" required>
                </label>
            </div>
            <div class="col-12">
                <label class="form-label">Password
                    <input class="form-control" type="password" name="password" required>
                </label>
            </div>
            <div class="col-12">
                <div class="form-check">
                <label class="form-check-label">
                <input class="form-check-input" type="checkbox">
                Remember me
                </label>
                </div>
            </div>
            <div class="col-12">
                <button type="submit" class="btn btn-primary">Create an account</button>
            </div>
        </form>
        <div class="row">
            <p>Already have an account? Login <a href="/auth/login">here</a></p>
        </div>

</div>

{{#if errorMessage}} 
<div class="alert alert-danger" role="alert">
    {{errorMessage}}
</div>
{{/if}}




