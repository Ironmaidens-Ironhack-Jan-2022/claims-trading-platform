<div class="card p-2 mb-2">
    
    <div class="container">

        <div class="row justify-content-between align-items-center mt-2">

            <div class="col-6">
                <h6> <span class="font-weight-bold">{{claimType}}</span> owed by {{debtor}} </h6>
                <h5> {{currency}} {{faceValue}} </h5>   
            </div>

            <div class="col-4">
                <h6 class="text-muted"> <i class="bi-geo-alt"></i> {{debtorLocation}}</h6>
                <h6 class="text-muted"> {{#if performance}} {{performance}} {{/if}}</h6>
            </div>
            
            <div class="col-2 d-flex align-items-end justify-content-end">
                <a href="/claims/{{_id}}/details"><button class="btn btn-primary">View Details</button></a>
            </div>

        </div>

    </div>
    
</div>