<div class="card m-2 p-2">
    
    <div class="container-fluid">

        <div class="row justify-content-between align-items-center">

            <div class="col-3">
                <h6> {{claimType}} </h6>
                <h5> {{currency}}{{this.faceValue}} </h5>   
            </div>

            <div class="col-3">
                <h6 class="text-muted"> {{debtorLocation}}</h6>
                <h6 class="text-muted"> {{#if performance}} {{performance}} {{/if}}</h6>
            </div>
            
            <div class="col-3 d-flex align-items-end justify-content-end">
                <a href="/claims/{{_id}}/details"><button class="btn btn-primary">View Details</button></a>
            </div>

        </div>

    </div>
    
</div>